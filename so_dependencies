#!/bin/sh -l

function so_dependencies() {
    if [ -f ${CURRENT_DIR}/requirements.apt ]; then
        DEBIAN_FRONTEND=noninteractive sudo -E apt-get install $(cat ${CURRENT_DIR}/requirements.apt) -y --force-yes
        if [ "$?" -ne "0" ]; then
            sudo apt-get update
            DEBIAN_FRONTEND=noninteractive sudo -E apt-get install $(cat ${CURRENT_DIR}/requirements.apt) -y --force-yes
        fi
    else
        echo "requirements.apt not found."
        echo "Skipping..."
    fi
}
